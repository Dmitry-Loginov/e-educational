{% extends 'base.html.twig' %}

{% block title %}Группы{% endblock %}

{% block body %}
<h1>Список групп</h1>

<a href="{{ path('group_new') }}" class="btn btn-primary">Создать группу</a>

<table class="table mt-3">
    <thead>
        <tr>
            <th>ID</th>
            <th>Название</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
    {% for group in groups %}
        <tr>
            <td>{{ group.id }}</td>
            <td>{{ group.name }}</td>
            <td>
                <a href="{{ path('group_show', {id: group.id}) }}" class="btn btn-sm btn-secondary">Просмотр</a>
                <a href="{{ path('group_edit', {id: group.id}) }}" class="btn btn-sm btn-warning">Изменить</a>
                <a href="{{ path('group_delete', {id: group.id}) }}" 
                   class="btn btn-sm btn-danger"
                   onclick="return confirm('Удалить группу и все связи пользователей?')">
                   Удалить
                </a>
            </td>
        </tr>
    {% else %}
        <tr><td colspan="3">Группы отсутствуют</td></tr>
    {% endfor %}
    </tbody>
</table>

{% endblock %}
