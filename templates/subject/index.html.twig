{% extends 'base.html.twig' %}
{% block title %}Предметы{% endblock %}
{% block body %}
    <table class="table">
        <thead  style="background-color: rgb(96, 27, 27);">
            <tr class="head-row" style="background-color: rgb(96, 27, 27);">
                <th><h3 class="subject-header">Предметы</h3></th>
            </tr>
        </thead>
        <tbody class="accordion accordion-flush" id="accordionExample">
        {% for subject in subjects %}
            <tr class="accordion-item">
                <td>
                    <h2 class="accordion-header" id="{{subject.id}}">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#col{{subject.id}}" aria-expanded="true" aria-controls="col{{subject.id}}">
                        {{subject.name}}
                        </button>
                    </h2>
                    <div id="col{{subject.id}}" class="accordion-collapse collapse" aria-labelledby="{{subject.id}}" data-bs-parent="#accordionExample">
                        <div class="accordion-body">
                            <div class="list-group">
                                {% for lesson in subject.lessons%}
                                    <a href="{{ path('lesson_show', {'id': lesson.id}) }}" class="list-group-item list-group-item-action m-2">{{lesson.name}}</a>
                                {% endfor %} 
                                {% if is_granted('ROLE_TEACHER') %} 
                                <div class="list-group" >
                                    <a href="{{ path('lesson_new', {'subjectId' : subject.id}) }}" class="list-group-item list-group-item-action m-2 create-lesson">Создать</a>
                                </div>
                                <div class="row">
                                    {{ include('subject/_delete_form.html.twig') }}
                                    <form class="form-del" style="margin-left:-4px;">
                                    <a href="{{ path('subject_edit', {'id' : subject.id}) }}" class="btn btn-outline-secondary">Изменить</a>
                                    </form>
                                </div>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">нет записей</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% if is_granted('ROLE_TEACHER') %}
        <a href="{{ path('subject_new') }}" class="link">Создать</a>
    {% endif %}
{% endblock %}
